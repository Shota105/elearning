<div class="container">
    <table class="table table-striped table-dark mt-4 mb-4">
    <thead>
        <tr>
        <th scope="col">Users table id</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Email</th>
        <th scope="col">Delete</th>
        <th scope="col">Assign Admin</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Del', admin_user_path(user), method: :delete, class: 'btn btn-danger btn-sm' %></td>
            <% if current_user != user %>
                <% if user.admin %>
                    <td><%= link_to 'Remove', admin_user_path(user, user: {admin: false}), method: :put, class: 'btn btn-danger btn-sm' %></td>
                <% else %>
                    <td><%= link_to 'AA', admin_user_path(user, user: {admin: true}), method: :put, class: 'btn btn-danger btn-sm' %></td>
                <% end %>
            <% else %>
                <td></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
    </table>
    <%= will_paginate @users %>
</div>