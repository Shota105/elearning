<div class="container">
    
    <div class="row">
        <% @users.each do |user| %>
            <div class="col-4 text-center p-2 mt-2 mb-2 border-bottom">
                    <%= link_to image_tag(user.gravatar_url, class: "profile-image"), user %>
                    <p><%= "#{user.first_name} #{user.last_name}" %></p>
            </div>
        <% end %>
    </div>

    <%= will_paginate @users %>
</div>