<div class="profile-height">
    <div class="jumbotron jumbotron-fluid p-0 mt-4 shadow col-8 offset-2">
    <div class="">
        <div class="w-100 m-0 position-relative">
            <% if @user.image.blank? %>
                <%= image_tag "home_image.jpg", class: "w-100 profile-back-image" %>
            <% else %>
                <%= image_tag @user.image_url, class: "w-100 profile-back-image" %>
            <% end %>
            <% if current_user == @user %>
            <%# <p class="position-absolute bg-image"><%= link_to 'Change the image'  </p>%>
                <%# <i class="fas fa-camera position-absolute"></i> %>
            <% end %>
        </div>
        <div class="row col-12 text-center mb-0">
            <div class="col-4 profile-left pt-4 mb-0">
                <%= image_tag @user.gravatar_url, class: "profile-image" %>
                <p class="pt-3"><%= "#{@user.first_name} #{@user.last_name}" %></p>
                <%= render 'follow_form' %> 
                <div class="row pt-3">
                    <div class="col-4 border">
                        <p>Following</p>
                        <p><%= link_to @user.following.count, following_user_path(@user), class: "follow-text" %></p>
                    </div>
                    <div class="col-4 border">
                        <p>Followers</p>
                        <p><%= link_to @user.followers.count, followers_user_path(@user), class: "follow-text" %></p>
                    </div>
                    <div class="col-4 border">
                        <p>Lank</p>
                        <p>100</p>
                    </div>
                </div>
            </div>
            <div class="col-8 mb-0 pt-3">
                <h4 class="">History of learned</h4>
                <% if @activities.any? %>
                    <div class="text-left">
                        <% @activities.each do |activity| %>
                            <% if activity.actionable_type == "Lesson" %>
                                <% if @user.id == activity.actionable.user_id %>
                                    <%= "#{@user.first_name} learned 
                                            #{activity.actionable.choices.where(correct: true).count} / #{activity.actionable.words.count} words
                                            in #{activity.actionable.category.title} #{activity.actionable.category.description}" %>
                                        <hr>
                                <% end %>
                            <% end %>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    </div>
</div>